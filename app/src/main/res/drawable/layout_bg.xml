<?xml version="1.0" encoding="UTF-8"?>
<!--code from the accepted answer in https://stackoverflow.com/questions/16161448/how-to-make-layout-with-rounded-corners-->
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="?attr/colorPrimaryContainer" />
    <stroke
        android:width="3dp"
        android:color="?attr/colorPrimaryContainer" />
    <corners android:radius="10dp" />
    <padding
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp" />
</shape>